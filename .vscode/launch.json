    "version": "0.2.0",
    "configurations": [

        {
            "type": "lua-local",
            "request": "launch",
            "name": "Debug",
            "program": {
              "command": "C:/lua/lua.exe"
            },
            "args": [
              "${file}",
              "debug"
            ]
          },
          {
            "type": "lua-local",
            "request": "launch",
            "name": "Release",
            "program": {
              "command": "C:/lua/lua.exe"
            },
            "args": [
              "${file}"
            ]
          },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${file}"
        }
    ]
}